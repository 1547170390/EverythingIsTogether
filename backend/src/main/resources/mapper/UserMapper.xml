<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
    这个 namespace 必须精确指向你的 Java Mapper 接口的完整路径,
    MyBatis 就是靠这个把它和 UserMapper.java 关联起来的。
-->
<mapper namespace="com.example.mapper.UserMapper">

    <!-- 
        id:         必须和 UserMapper.java 接口中定义的方法名完全一致。
        resultType: 查询结果要封装成的对象类型，这里是我们的 User 实体类。
     -->
    <select id="findByName" resultType="com.example.entity.User">
        SELECT * FROM users WHERE name = #{name}
    </select>

</mapper>
